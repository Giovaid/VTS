<script>
const noBtn=document.getElementById('noBtn');
const yesBtn=document.getElementById('yesBtn');
const startScreen=document.getElementById('start-screen');
const quizScreen=document.getElementById('quiz-screen');
const giftScreen=document.getElementById('gift-screen');
const questionEl=document.getElementById('question');
const answersEl=document.getElementById('answers');
const progressEl=document.getElementById('progress');
const revealText=document.getElementById('revealText');
const confettiEl=document.getElementById('confetti');
// Ausweichender Nein-Button
noBtn.addEventListener('mouseenter',()=>{
const x=Math.random()*60-30;
const y=Math.random()*60-30;
noBtn.style.transform=`translate(${x}px, ${y}px)`;
});
// Ja Button
yesBtn.addEventListener('click',()=>{
startScreen.classList.add('hidden');
quizScreen.classList.remove('hidden');
loadQuestion();
});
// Quiz-Daten
const quiz=[
{q:"Wie hei√üen wir beide?", a:["Georgian & Kl√§rchen","John & Mary","Max & Lisa"], correct:0},
{q:"Was ist unser Lieblingsfilm?", a:["Inception","Titanic","Frozen"], correct:0},
{q:"Lieblingsfarbe deiner Freundin?", a:["Lila","Blau","Rot"], correct:0},
{q:"Unser Insiderwitz?", a:["Spiralrutsche","Keksmonster","Moonwalk"], correct:0},
{q:"Erstes Date Ort?", a:["Caf√©","Park","Kino"], correct:0},
{q:"Lieblingssnack?", a:["Popcorn","Chips","Schokolade"], correct:2},
];
let current=0;
let score=0;
function loadQuestion(){
if(current>=quiz.length){endQuiz(); return;}
const q=quiz[current];
questionEl.textContent=q.q;
answersEl.innerHTML='';
q.a.forEach((ans,i)=>{
const btn=document.createElement('button');
btn.textContent=ans;
btn.addEventListener('click',()=>{
if(i===q.correct) score++;
current++;
progressEl.style.width=((current/quiz.length)*100)+'%';
loadQuestion();
});
answersEl.appendChild(btn);
});
}
function endQuiz(){
quizScreen.classList.add('hidden');
giftScreen.classList.remove('hidden');
startConfetti();
}
// Geschenk Reveal
document.querySelectorAll('.gift-card').forEach(card=>{
card.addEventListener('click',()=>{
revealText.textContent=card.dataset.reveal;
});
});
// Confetti
function startConfetti(){
for(let i=0;i<50;i++){
const piece=document.createElement('div');
piece.classList.add('confetti-piece');
piece.style.left=Math.random()*100+'vw';
piece.style.animationDelay=Math.random()*3+'s';
confettiEl.appendChild(piece);
}
}
</script>
